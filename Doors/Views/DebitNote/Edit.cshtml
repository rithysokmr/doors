@{
    <script>
        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            $.notify(data.message, {
                                globalPosition: "Top Center",
                                className: "success"
                            });
                        }
                    }
                });
            }
            return false;
        }


    </script>
}

